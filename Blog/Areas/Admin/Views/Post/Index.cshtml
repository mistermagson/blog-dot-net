
@model List<Post>

<h2>Lista de Posts</h2>

<br />

<div class="form-control">
    @Html.ActionLink("Incluir Post", "Novo", null, null, new { @class = "btn btn-primary" })

</div>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <!-- TH significa head, que é o cabeçalho -->
            <th style="border: 1px solid black">Título</th>
            <th style="border: 1px solid black">Resumo</th>
            <th style="border: 1px solid black">Categoria</th>
            <th style="border: 1px solid black">Publicado</th>
            <th style="border: 1px solid black" colspan="2">Ações</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td style="border: 1px solid black">
                    @Html.ActionLink(post.Titulo, "Visualiza", new { id = post.Id })
                </td>
                <td style="border: 1px solid black">@post.Resumo</td>
                <td style="border: 1px solid black">@post.Categoria</td>
                <td style="border: 1px solid black">
                    @if (post.Publicado)
                    {
                        @Html.Raw(string.Format("{0:dd/MM/yyyy}", post.DataPublicacao))

                    }
                    else
                    {
                        @Html.Raw("Não")
                    }

                </td>
                <td style="border: 1px solid black">
                   
                    @Html.ActionLink("Remover", "Delete", new { id = post.Id }, new { @class = "btn btn-danger" })
                </td>
                <td style="border: 1px solid black">
                    @Html.ActionLink("Publicar", "publicapost", new { id = post.Id }, new { @class = "btn btn-success" })
                </td>

            </tr>

        }
    </tbody>
</table>


