@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,	initial-scale=1.0" />
    <title>Resenha	Cultural	-	Login</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/estilo.css" rel="stylesheet" />
</head>

<body>
    <div style="margin: auto; width: 50%; height:50%; padding: 90px; position:center">
        <main id="login-form">
            <h2>Resenha	Cultural	-	Login</h2>
            <div asp-validation-summary="ModelOnly"></div>
            <form action="/login/autentica" method="post">

                <div class="form-group">
                    <label asp-for="Login"></label>
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha"></label>
                    <input asp-for="Senha" class="form-control" type="password" />
                    <span asp-validation-for="Senha"></span>
                    @Html.ValidationMessage("loginInvalido")
                </div>
                <input type="submit" value="Logar" />
            </form>
        </main>
    </div>
</body>
</html>