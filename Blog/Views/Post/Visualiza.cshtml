@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model Blog.Models.Post

<form asp-controller="Post" asp-action="Altera" method="post">
    
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DataPublicacao" />
    <input type="hidden" asp-for="Publicado" />

    <label asp-for="Titulo"></label>
    <input asp-for="Titulo" />
    <span asp-validation-for="Titulo"></span>

    <label asp-for="Resumo"></label>
    <input asp-for="Resumo" />
    <span asp-validation-for="Resumo"></span>

    <label asp-for="Categoria"></label>
    <input asp-for="Categoria" />
    <span asp-validation-for="Categoria"></span>

    <input type="submit" value="Alterar" />
</form>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
